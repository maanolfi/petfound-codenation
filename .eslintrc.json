{
  "settings": {
    "react": {
      "version": "16.8.6"
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "react/jsx-uses-react": "error",
    "react/prop-types": 0
  }
}
